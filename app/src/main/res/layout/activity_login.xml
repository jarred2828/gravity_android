<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.gravity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:background="@color/colorPurple">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/gravity_logo_colour"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:background="@drawable/splash_background">

        <ImageView
            android:id="@+id/gravityText"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/gravity_text"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="275dp"
            android:layout_height="45dp"
            android:background="@drawable/fb_button_background"
            android:layout_centerHorizontal="true"
            android:text="@string/fb_button_text"
            android:textColor="@color/colorWhiteText"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/gravityText"/>

    </RelativeLayout>

</LinearLayout>